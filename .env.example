# Application
NODE_ENV=development
LOG_LEVEL=debug

# Database
DATABASE_URL=postgresql://hmsuser:hmspassword@localhost:5432/hms
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=20

# Redis
REDIS_URL=redis://localhost:6379
REDIS_TTL_DEFAULT=300

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production-must-be-at-least-32-characters
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d
JWT_ALGORITHM=RS256

# Encryption (32-byte hex key)
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# ABDM (Ayushman Bharat Digital Mission)
ABDM_API_URL=https://abhasbx.abdm.gov.in/abha/api
ABDM_CLIENT_ID=your-abdm-client-id
ABDM_CLIENT_SECRET=your-abdm-client-secret

# Payment Gateway (Razorpay)
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# SMS/Email
MSG91_AUTH_KEY=your-msg91-auth-key
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
EMAIL_FROM="HMS <noreply@yourhospital.com>"

# GST E-Invoice
GST_EINVOICE_API_URL=https://einvoice1.gst.gov.in
GST_USERNAME=your-gst-username
GST_PASSWORD=your-gst-password
HOSPITAL_GSTIN=your-hospital-gstin
HOSPITAL_LEGAL_NAME=Your Hospital Name
HOSPITAL_ADDRESS_LINE1=Hospital Address Line 1
HOSPITAL_CITY=City
HOSPITAL_STATE_CODE=27
HOSPITAL_PINCODE=411001

# File Storage (MinIO/S3)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=hms-documents
MINIO_USE_SSL=false

# AWS S3 (Production)
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET=hms-production-documents

# API Gateway
API_GATEWAY_PORT=3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# CORS
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Frontend
VITE_API_URL=http://localhost:3000/api/v1
VITE_RAZORPAY_KEY_ID=rzp_test_your_key_id

# Monitoring
SENTRY_DSN=
NEWRELIC_LICENSE_KEY=
